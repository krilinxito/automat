---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import PlatformLogos from '../../components/PlatformLogos.astro';
---

<Layout title="Gestión de Citas - AutomatLab" description="Sistema inteligente de gestión de citas para optimizar tu agenda y mejorar la experiencia de tus clientes">
    <Navigation />
    <main>
        <section class="service-hero">
            <div class="container">
                <h1 class="gradient-text">Gestión de Citas</h1>
                <p class="subtitle">Sistema inteligente de programación y gestión de citas</p>
                <PlatformLogos 
                    showWhatsapp={true}
                    showGoogleCalendar={true}
                    label="Integrado con"
                />
            </div>
            <div class="hero-visual">
                <div class="geometric-shape"></div>
                <div class="circuit-lines"></div>
            </div>
        </section>

        <section class="service-features">
            <div class="container">
                <div class="features-grid">
                    <div class="feature-card glass-card">
                        <div class="feature-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                <line x1="3" y1="10" x2="21" y2="10"></line>
                            </svg>
                        </div>
                        <h3>Calendario Inteligente</h3>
                        <p>Integración directa con Google Calendar para una gestión centralizada y profesional de tu agenda.</p>
                    </div>

                    <div class="feature-card glass-card">
                        <div class="feature-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M22 17H2a3 3 0 0 0 3-3V9a7 7 0 0 1 14 0v5a3 3 0 0 0 3 3zm-8.27 4a2 2 0 0 1-3.46 0"></path>
                            </svg>
                        </div>
                        <h3>Recordatorios Automáticos</h3>
                        <p>Notificaciones personalizadas vía WhatsApp para asegurar la asistencia a las citas programadas.</p>
                    </div>

                    <div class="feature-card glass-card">
                        <div class="feature-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polyline points="12 6 12 12 16 14"></polyline>
                            </svg>
                        </div>
                        <h3>Gestión en Tiempo Real</h3>
                        <p>Control total de tu agenda con actualizaciones instantáneas.</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="service-details">
            <div class="container">
                <div class="details-grid">
                    <div class="details-content glass-card">
                        <h2>Características Principales</h2>
                        <ul class="features-list">
                            <li>
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="20 6 9 17 4 12"></polyline>
                                </svg>
                                <span>Programación automática de citas</span>
                            </li>
                            <li>
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="20 6 9 17 4 12"></polyline>
                                </svg>
                                <span>Sistema de recordatorios multicanal</span>
                            </li>
                            <li>
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="20 6 9 17 4 12"></polyline>
                                </svg>
                                <span>Gestión de disponibilidad en tiempo real</span>
                            </li>
                            <li>
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="20 6 9 17 4 12"></polyline>
                                </svg>
                                <span>Integración con calendarios existentes</span>
                            </li>
                            <li>
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="20 6 9 17 4 12"></polyline>
                                </svg>
                                <span>Integración completa con Google Calendar</span>
                            </li>
                            <li>
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="20 6 9 17 4 12"></polyline>
                                </svg>
                                <span>Recordatorios automáticos vía WhatsApp</span>
                            </li>
                        </ul>
                    </div>
                    <div class="details-visual glass-card">
                        <div class="calendar-demo">
                            <div class="calendar-header">
                                <h3>Calendario</h3>
                                <div class="calendar-nav">
                                    <span class="month">Octubre 2023</span>
                                </div>
                            </div>
                            <div class="calendar-grid">
                                <div class="calendar-day header">Lun</div>
                                <div class="calendar-day header">Mar</div>
                                <div class="calendar-day header">Mié</div>
                                <div class="calendar-day header">Jue</div>
                                <div class="calendar-day header">Vie</div>
                                <div class="calendar-day">1</div>
                                <div class="calendar-day">2</div>
                                <div class="calendar-day active">3</div>
                                <div class="calendar-day">4</div>
                                <div class="calendar-day">5</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="cta-section">
            <div class="container">
                <div class="cta-content glass-card">
                    <h2>Optimiza tu Gestión de Citas</h2>
                    <p>Descubre cómo nuestro sistema puede ayudarte a gestionar tu agenda de manera eficiente.</p>
                    <a href="/contacto" class="btn">Solicitar Demo</a>
                </div>
            </div>
        </section>
    </main>
    <Footer />
</Layout>

<style>
    .service-hero {
        padding: calc(var(--space-xl) * 2) 0 var(--space-xl);
        text-align: center;
        position: relative;
        overflow: hidden;
        background: linear-gradient(
            180deg,
            var(--color-background) 0%,
            rgba(193, 120, 23, 0.05) 100%
        );
    }

    .service-hero h1 {
        font-size: 3rem;
        margin-bottom: var(--space-md);
    }

    .subtitle {
        font-size: 1.25rem;
        color: var(--color-text-light);
        max-width: 600px;
        margin: 0 auto;
    }

    .hero-visual {
        position: absolute;
        top: 0;
        right: 0;
        width: 600px;
        height: 100%;
        opacity: 0.1;
        pointer-events: none;
    }

    .geometric-shape {
        position: absolute;
        top: 50%;
        right: -100px;
        width: 400px;
        height: 400px;
        background: linear-gradient(135deg, var(--color-accent), var(--color-primary));
        border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
        animation: morphShape 15s ease-in-out infinite;
    }

    .circuit-lines {
        position: absolute;
        top: 50%;
        right: 0;
        width: 300px;
        height: 300px;
        background: 
            linear-gradient(90deg, var(--color-primary) 1px, transparent 1px) 0 0 / 20px 20px,
            linear-gradient(0deg, var(--color-primary) 1px, transparent 1px) 0 0 / 20px 20px;
        animation: rotate 20s linear infinite;
    }

    .service-features {
        padding: var(--space-xl) 0;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: var(--space-lg);
    }

    .feature-card {
        padding: var(--space-xl);
        text-align: center;
    }

    .feature-icon {
        width: 64px;
        height: 64px;
        margin: 0 auto var(--space-lg);
        background: var(--color-primary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-surface);
    }

    .feature-card h3 {
        margin-bottom: var(--space-md);
    }

    .service-details {
        padding: var(--space-xl) 0;
    }

    .details-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--space-xl);
    }

    .details-content {
        padding: var(--space-xl);
    }

    .details-content h2 {
        font-size: 2rem;
        margin-bottom: var(--space-xl);
    }

    .features-list {
        list-style: none;
        padding: 0;
    }

    .features-list li {
        display: flex;
        align-items: center;
        gap: var(--space-md);
        margin-bottom: var(--space-lg);
        color: var(--color-text-light);
    }

    .features-list svg {
        color: var(--color-primary);
        flex-shrink: 0;
    }

    .details-visual {
        padding: var(--space-xl);
    }

    .calendar-demo {
        max-width: 400px;
        margin: 0 auto;
    }

    .calendar-header {
        margin-bottom: var(--space-lg);
        text-align: center;
    }

    .calendar-nav {
        display: flex;
        justify-content: center;
        gap: var(--space-md);
        margin-top: var(--space-sm);
    }

    .calendar-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: var(--space-sm);
    }

    .calendar-day {
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 4px;
        font-size: 0.9rem;
    }

    .calendar-day.header {
        font-weight: 600;
        color: var(--color-primary);
    }

    .calendar-day.active {
        background: var(--color-primary);
        color: var(--color-surface);
    }

    .cta-section {
        padding: var(--space-xl) 0;
    }

    .cta-content {
        text-align: center;
        padding: var(--space-xl);
        max-width: 800px;
        margin: 0 auto;
    }

    .cta-content h2 {
        font-size: 2rem;
        margin-bottom: var(--space-md);
    }

    .cta-content p {
        color: var(--color-text-light);
        margin-bottom: var(--space-lg);
    }

    @keyframes morphShape {
        0% { border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%; }
        25% { border-radius: 58% 42% 75% 25% / 76% 46% 54% 24%; }
        50% { border-radius: 50% 50% 33% 67% / 55% 27% 73% 45%; }
        75% { border-radius: 33% 67% 58% 42% / 63% 68% 32% 37%; }
        100% { border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%; }
    }

    @keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    @media (max-width: 968px) {
        .service-hero h1 {
            font-size: 2.5rem;
        }

        .details-grid {
            grid-template-columns: 1fr;
        }

        .hero-visual {
            display: none;
        }
    }
</style> 
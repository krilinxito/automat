---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contacto - AutomatLab" description="Contáctanos para impulsar tu negocio con soluciones de automatización inteligente">
    <Navigation />
    <main>
        <section class="contact-hero">
            <div class="container">
                <h1 class="gradient-text">Contacto</h1>
                <p class="subtitle">Estamos aquí para ayudarte a transformar tu negocio</p>
            </div>
        </section>

        <section class="contact-section">
            <div class="container">
                <div class="contact-grid">
                    <div class="contact-info">
                        <div class="info-card glass-card">
                            <h2>Información de Contacto</h2>
                            <div class="info-item">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                    <polyline points="22,6 12,13 2,6"></polyline>
                                </svg>
                                <div>
                                    <h3>Email</h3>
                                    <p>info@automatlab.com</p>
                                </div>
                            </div>
                            <div class="info-item">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                                </svg>
                                <div>
                                    <h3>Teléfono</h3>
                                    <p>(123) 456-7890</p>
                                </div>
                            </div>
                            <div class="info-item">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                    <circle cx="12" cy="10" r="3"></circle>
                                </svg>
                                <div>
                                    <h3>Dirección</h3>
                                    <p>Ciudad Tecnológica #123<br>Innovation Hub, CP 12345</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="contact-form glass-card">
                        <h2>Envíanos un Mensaje</h2>
                        <form action="#" method="POST" id="contact-form">
                            <div class="form-group">
                                <label for="name">Nombre</label>
                                <input type="text" id="name" name="name" required placeholder="Tu nombre">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" id="email" name="email" required placeholder="tu@email.com">
                            </div>
                            <div class="form-group">
                                <label for="subject">Asunto</label>
                                <input type="text" id="subject" name="subject" required placeholder="¿En qué podemos ayudarte?">
                            </div>
                            <div class="form-group">
                                <label for="message">Mensaje</label>
                                <textarea id="message" name="message" required placeholder="Tu mensaje"></textarea>
                            </div>
                            <button type="submit" class="btn">Enviar Mensaje</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <Footer />
</Layout>

<style>
    .contact-hero {
        padding: calc(var(--space-xl) * 2) 0 var(--space-xl);
        text-align: center;
        background: linear-gradient(
            180deg,
            var(--color-background) 0%,
            rgba(193, 120, 23, 0.05) 100%
        );
    }

    .contact-hero h1 {
        font-size: 3rem;
        margin-bottom: var(--space-md);
    }

    .subtitle {
        font-size: 1.25rem;
        color: var(--color-text-light);
        max-width: 600px;
        margin: 0 auto;
    }

    .contact-section {
        padding: var(--space-xl) 0;
    }

    .contact-grid {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: var(--space-xl);
    }

    .info-card {
        padding: var(--space-xl);
        height: 100%;
    }

    .info-card h2 {
        margin-bottom: var(--space-xl);
        font-size: 1.5rem;
    }

    .info-item {
        display: flex;
        gap: var(--space-md);
        margin-bottom: var(--space-lg);
    }

    .info-item svg {
        color: var(--color-primary);
        flex-shrink: 0;
    }

    .info-item h3 {
        font-size: 1.1rem;
        margin-bottom: var(--space-xs);
    }

    .info-item p {
        color: var(--color-text-light);
        margin: 0;
    }

    .contact-form {
        padding: var(--space-xl);
    }

    .contact-form h2 {
        margin-bottom: var(--space-xl);
        font-size: 1.5rem;
    }

    .form-group {
        margin-bottom: var(--space-lg);
    }

    .form-group label {
        display: block;
        margin-bottom: var(--space-xs);
        color: var(--color-text);
        font-weight: 500;
    }

    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: var(--space-sm);
        border: 1px solid rgba(193, 120, 23, 0.2);
        border-radius: 4px;
        background: var(--color-surface);
        color: var(--color-text);
        font-family: var(--font-family);
    }

    .form-group textarea {
        height: 150px;
        resize: vertical;
    }

    .form-group input:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: var(--color-primary);
    }

    @media (max-width: 968px) {
        .contact-grid {
            grid-template-columns: 1fr;
        }

        .contact-hero h1 {
            font-size: 2.5rem;
        }
    }
</style>

<script>
    const form = document.getElementById('contact-form') as HTMLFormElement | null;
    form?.addEventListener('submit', (e) => {
        e.preventDefault();
        // Aquí iría la lógica de envío del formulario
        alert('Gracias por tu mensaje. Te contactaremos pronto.');
        form?.reset();
    });
</script> 
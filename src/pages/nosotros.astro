<style>
    .about-hero {
        padding: calc(var(--space-xl) * 2) 0 var(--space-xl);
        text-align: center;
        background: linear-gradient(
            180deg,
            var(--color-background) 0%,
            rgba(193, 120, 23, 0.05) 100%
        );
    }

    .about-hero h1 {
        font-size: 3rem;
        margin-bottom: var(--space-md);
    }

    .subtitle {
        font-size: 1.25rem;
        color: var(--color-text-light);
        max-width: 600px;
        margin: 0 auto;
    }

    .about-mission {
        padding: var(--space-xl) 0;
    }

    .mission-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--space-xl);
        align-items: center;
    }

    .mission-content {
        padding: var(--space-xl);
    }

    .mission-content h2 {
        font-size: 2rem;
        margin-bottom: var(--space-lg);
    }

    .mission-content p {
        color: var(--color-text-light);
        margin-bottom: var(--space-md);
    }

    .mission-visual {
        position: relative;
        height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .geometric-shape {
        width: 300px;
        height: 300px;
        background: linear-gradient(135deg, var(--color-accent), var(--color-primary));
        border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
        animation: morphShape 15s ease-in-out infinite;
        opacity: 0.1;
    }

    .circuit-lines {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 250px;
        height: 250px;
        background: 
            linear-gradient(90deg, var(--color-primary) 1px, transparent 1px) 0 0 / 20px 20px,
            linear-gradient(0deg, var(--color-primary) 1px, transparent 1px) 0 0 / 20px 20px;
        opacity: 0.1;
        animation: rotate 20s linear infinite;
    }

    .values-section,
    .team-section {
        padding: var(--space-xl) 0;
    }

    .section-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: var(--space-md);
    }

    .section-subtitle {
        text-align: center;
        color: var(--color-text-light);
        max-width: 600px;
        margin: 0 auto var(--space-xl);
    }

    .values-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: var(--space-lg);
    }

    .value-card {
        padding: var(--space-xl);
        text-align: center;
    }

    .value-icon {
        width: 64px;
        height: 64px;
        margin: 0 auto var(--space-lg);
        background: var(--color-primary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-surface);
    }

    .value-card h3 {
        margin-bottom: var(--space-md);
    }

    .value-card p {
        color: var(--color-text-light);
        margin: 0;
    }

    .team-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: var(--space-lg);
    }

    .team-card {
        padding: var(--space-lg);
        text-align: center;
    }

    .team-image.placeholder {
        width: 150px;
        height: 150px;
        margin: 0 auto var(--space-md);
        background: linear-gradient(135deg, var(--color-accent), var(--color-primary));
        border-radius: 50%;
        opacity: 0.1;
    }

    .team-card h3 {
        margin-bottom: var(--space-xs);
    }

    .team-role {
        color: var(--color-text-light);
        margin: 0;
    }

    @keyframes morphShape {
        0% { border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%; }
        25% { border-radius: 58% 42% 75% 25% / 76% 46% 54% 24%; }
        50% { border-radius: 50% 50% 33% 67% / 55% 27% 73% 45%; }
        75% { border-radius: 33% 67% 58% 42% / 63% 68% 32% 37%; }
        100% { border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%; }
    }

    @keyframes rotate {
        from { transform: translate(-50%, -50%) rotate(0deg); }
        to { transform: translate(-50%, -50%) rotate(360deg); }
    }

    @media (max-width: 968px) {
        .about-hero h1 {
            font-size: 2.5rem;
        }

        .mission-grid {
            grid-template-columns: 1fr;
        }

        .mission-visual {
            height: 300px;
        }

        .section-title {
            font-size: 2rem;
        }
    }
</style> 
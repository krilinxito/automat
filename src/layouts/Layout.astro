---
interface Props {
	title: string;
	description?: string;
}

const { title, description = "Soluciones de automatizaci√≥n con IA para chats, citas y ventas" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
		<style is:global>
			:root {
				/* Color Palette */
				--color-primary: #C17817;      /* Warm terracotta */
				--color-secondary: #8B4513;    /* Saddle brown */
				--color-accent: #E8A87C;       /* Peach */
				--color-background: #FAF3E0;   /* Cream */
				--color-text: #2C1810;         /* Dark brown */
				--color-text-light: #5C4033;   /* Medium brown */
				--color-surface: #FFFFFF;      /* White */
				
				/* Spacing */
				--space-xs: 0.25rem;
				--space-sm: 0.5rem;
				--space-md: 1rem;
				--space-lg: 2rem;
				--space-xl: 4rem;
				
				/* Typography */
				--font-family: 'Space Grotesk', system-ui, sans-serif;
			}

			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			html {
				font-family: var(--font-family);
				background: var(--color-background);
				color: var(--color-text);
				scroll-behavior: smooth;
			}

			body {
				min-height: 100vh;
				overflow-x: hidden;
			}

			h1, h2, h3, h4, h5, h6 {
				font-weight: 600;
				line-height: 1.2;
				margin-bottom: var(--space-md);
			}

			p {
				line-height: 1.6;
				margin-bottom: var(--space-md);
			}

			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 var(--space-md);
			}

			.btn {
				display: inline-block;
				padding: var(--space-sm) var(--space-lg);
				background-color: var(--color-primary);
				color: var(--color-surface);
				text-decoration: none;
				border-radius: 4px;
				font-weight: 500;
				transition: all 0.3s ease;
				border: none;
				cursor: pointer;
			}

			.btn:hover {
				background-color: var(--color-secondary);
				transform: translateY(-2px);
			}

			/* Retro-futuristic elements */
			.glass-card {
				background: rgba(255, 255, 255, 0.1);
				backdrop-filter: blur(10px);
				border: 1px solid rgba(255, 255, 255, 0.2);
				border-radius: 8px;
				padding: var(--space-lg);
			}

			.gradient-text {
				background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}
		</style>
	</body>
</html>
